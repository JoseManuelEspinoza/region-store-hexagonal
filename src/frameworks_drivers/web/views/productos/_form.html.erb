<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @producto, local: true, html: {class: "form"}) do |form| %>
        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <%= form.label :titulo, class: "control-label" %>
              <%= form.text_field :titulo, class: "form-control", placeholder: "Título del producto" %>
              <% if @producto.errors[:titulo].any? %>
                <div class="error-message"><%= @producto.errors[:titulo].first %></div>
              <% end %>
            </div>

            <div class="form-group">
              <%= form.label :description, class: "control-label" %>
              <%= form.text_area :description, class: "form-control", placeholder: "Descripción del producto" %>
              <% if @producto.errors[:description].any? %>
                <div class="error-message"><%= @producto.errors[:description].first %></div>
              <% end %>
            </div>

            <div class="form-group">
              <%= form.label :price, class: "control-label" %>
              <%= form.number_field :price, step: '0.01', class: "form-control", placeholder: "Precio del producto" %>
              <% if @producto.errors[:price].any? %>
                <div class="error-message"><%= @producto.errors[:price].first %></div>
              <% end %>
            </div>

            <div class="field">
              <%= form.label :region_id, "Region" %>
              <%= form.collection_select :region_id, Region.all.order(name: :asc), :id, :name, { prompt: "Seleccione la región" }, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :photo, class: "control-label" %>
              <%= form.file_field :photo, class: "form-control-file" %>
            </div>

            <div class="mt-3 text-center custom-button">
              <%= form.submit "Guardar"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
