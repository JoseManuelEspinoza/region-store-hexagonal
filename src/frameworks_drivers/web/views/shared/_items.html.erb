<div class="flex flex-row">
  <% if Current.user && !Current.user.admin? %>
    <%= link_to  carritos_path , class: 'flex flex-row mx-2 text-white font-bold' do %>
      <span>Compras</span>
    <% end %>
  <% end %>
  <%= link_to "Cartera", cargos_path, class:"mx-2 text-white font-bold" if Current.user && Current.user.admin? %>
  <%= link_to "Añadir producto", new_producto_path, class:"mx-2 text-white font-bold" if Current.user && Current.user.admin? %>
  <%= link_to "Regiones", regions_path, class:"mx-2 text-white font-bold" if Current.user && Current.user.admin?%>

  
  <% if Current.user.nil? %>
    <%= link_to "Login", new_session_path, class: "mx-2 text-white font-bold" %>
  <% end %>
  <%= link_to "Logout", session_path(Current.user.id), data: { turbo_method: :delete, turbo_confirm: "¿Está seguro?" }, class:"mx-2 text-white font-bold" if Current.user %>
</div>
